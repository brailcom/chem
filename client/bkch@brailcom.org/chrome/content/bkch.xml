<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="reference">
    <content>
      <xul:description xbl:inherits="value"/>
    </content>
    <handlers>
      <handler event="keypress" key="f" action="bkch_follow_reference(this)"/>
      <handler event="keypress" keycode="VK_RETURN" action="bkch_follow_reference(this)"/>
      <handler event="click" action="bkch_follow_reference(this)"/>
    </handlers>
  </binding>
</bindings>
